                <GroupBox Header="优先级中" Content="{{OpenStatusMediumPriorityCount}}" />
                <GroupBox Header="优先级高" Content="{{OpenStatusHighPriorityCount}}" />
                <GroupBox Header="优先级极高" Content="{{OpenStatusHighestPriorityCount}}" />
